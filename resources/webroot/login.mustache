{{> header}}
<body>
    <br>
    <h1 align="center">Log into {{title}}!</h1>
    <div class="w-75" style="float: none; margin: 0 auto;">
        <form action="" method="post">
            <div class="form-group">
                <label for="username-email">Username or Email</label>
                <input type="username-email" class="form-control" id="username-email" name="username-email" value="{{username-email}}" required>
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" class="form-control" id="password" name="password" value="{{password}}" required>
            </div>
            <input type="hidden" name="_csrf" value="{{csrf}}">
            <button type="submit" class="btn btn-primary">Login</button>
            {{#is_error}}<br><small class="text-danger">{{error}}</small>{{/is_error}}
        </form>
    </div>
    <br>
</body>
