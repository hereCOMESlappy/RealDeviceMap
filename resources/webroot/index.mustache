{{> header}}

    <link href="/index.css" rel="stylesheet">
    <script src="/index.js"></script>

    <div class="fill" id="map"></div>

    <div class="modal fade" id="settingsModal" tabindex="-1" role="dialog" aria-labelledby="settingsModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="settingsModalLabel">Settings</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div {{#hide_gyms}}class="d-none"{{/hide_gyms}}>
                        <label class="switch">
                            <input type="checkbox" id="switch-show-gyms">
                            <span class="slider"></span>
                        </label>
                        Show Gyms
                    </div>
                    <div {{#hide_raids}}class="d-none"{{/hide_raids}}>
                        <label class="switch">
                            <input type="checkbox" id="switch-show-raids">
                            <span class="slider"></span>
                        </label>
                        Show Raids
                    </div>
                    <div {{#hide_pokestops}}class="d-none"{{/hide_pokestops}}>
                        <label class="switch">
                            <input type="checkbox" id="switch-show-pokestops">
                            <span class="slider"></span>
                        </label>
                        Show Pokestops
                    </div>
                    <div {{#hide_pokemon}}class="d-none"{{/hide_pokemon}}>
                        <label class="switch">
                            <input type="checkbox" id="switch-show-pokemon">
                            <span class="slider"></span>
                        </label>
                        Show Pokemon
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" id="saveSettings" class="btn btn-primary">Save</button>
                </div>
            </div>
        </div>
    </div>

{{> footer}}
